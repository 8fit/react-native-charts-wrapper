<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rectangle_markerContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

        <TextView
            android:id="@+id/rectangle_tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_marker"
            android:layout_centerHorizontal="true"
            android:text=""
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:elevation="10dp"
            />

    <View
        android:id="@+id/rectangle_tvContent_shadow"
        android:background="@drawable/rectangle_marker_shadow"
        android:layout_alignTop="@id/rectangle_tvContent"
        android:layout_alignLeft="@id/rectangle_tvContent"
        android:layout_alignRight="@id/rectangle_tvContent"
        android:layout_alignBottom="@id/rectangle_tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#35444D"
        android:elevation="1dp"
        />

</RelativeLayout>
